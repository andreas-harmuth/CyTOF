#### INPUT PARAMETERS
## Functionality
r <- "b" # "b" (basic run) or "a" (advanced run)
## Lasers
lasers <- c(355,405,488,561,640)
## Minimal excitation ratio
c <- 0.1
## Basic options
if (r == "b") {
n <- 10
markers <- "all"
}
## Advanced options
if (r == "a") {
markers <- list()
markers[["CD8"]] <- c("Acridine orange", "7-hydroxy-4-methylcoumarin")
markers[["CD45"]] <- c("YOYO-3", "1,8-ANS")
markers[["NRP1"]] <- c("4-Di-10-ASP")
markers[["CD4"]] <- c("alamarBlue", "7-AAD (7-aminoactinomycin D)")
}
#### SOURCE FUNCTIONS
source("~/Dropbox/Git_repos/flow/emission_recalc.R")
source("~/Dropbox/Git_repos/flow/overlap_dist.R")
#### RE_CALCULATE EMISSION BASED ON LASERS
spectra <- emission_recalc(lasers, markers, c)
#### DESIGN MINIMAL OVERLAP PANEL FROM SELECTED MARKERS
overlaps <- overlap(n, spectra, lasers, r, plot=TRUE)
